
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read and write to their own user document.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    match /rooms/{roomId} {
      // Any authenticated user can create a room.
      allow create: if request.auth.uid != null;
      
      // Any authenticated user can read a room document. This is needed to check
      // for a room's existence before joining and to get its name.
      allow read: if request.auth.uid != null;

      // Any authenticated user can update a room document.
      // This is a permissive rule to allow users to join a room by adding themselves
      // to the 'members' array. In a production app, you might want to make this
      // more secure.
      allow update: if request.auth.uid != null;

      // Only members of a room can read or create annotations, highlights, and messages.
      // This is the rule that fixes the "permission-denied" error in the snapshot listener.
      match /annotations/{annotationId} {
        allow read, create: if request.auth.uid in get(/databases/$(database)/documents/rooms/$(roomId)).data.members;
      }
      match /highlights/{highlightId} {
        allow read, create: if request.auth.uid in get(/databases/$(database)/documents/rooms/$(roomId)).data.members;
      }
      match /messages/{messageId} {
        allow read, create: if request.auth.uid in get(/databases/$(database)/documents/rooms/$(roomId)).data.members;
      }
    }
  }
}
