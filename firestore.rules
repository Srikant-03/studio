rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for user profiles
    match /users/{userId} {
      // Users can read anyone's public profile
      allow read: if request.auth != null;
      // Users can only create and update their own profile
      allow create, update: if request.auth.uid == userId;
    }

    // Rules for rooms
    match /rooms/{roomId} {
      // Anyone authenticated can create a room (by creating a document with their ID in members)
      allow create: if request.auth != null && request.auth.uid in request.resource.data.members;
      
      // Only members of the room can read or update it (e.g., to add new members)
      allow read, update: if request.auth != null && request.auth.uid in resource.data.members;

      // Members can't delete rooms for now
      allow delete: if false;

      // Allow members to read/write annotations, highlights, messages and bookmarks
      match /{dataType}/{dataId} where dataType in ['annotations', 'highlights', 'messages', 'bookmarks'] {
        allow read, write: if request.auth.uid in get(/databases/$(database)/documents/rooms/$(roomId)).data.members;
      }
    }
  }
}
