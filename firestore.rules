
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for the 'users' collection
    match /users/{userId} {
      // Any authenticated user can read user profiles (for names, colors, etc.)
      allow read: if request.auth != null;

      // A user can create and update their own profile. They cannot delete it.
      allow create, update: if request.auth.uid == userId;
    }

    // Rules for the 'rooms' collection
    match /rooms/{roomId} {
      // Any authenticated user can create a new room.
      allow create: if request.auth != null;

      // Only members of the room can read the room's data.
      allow read: if request.auth.uid in resource.data.members;

      // Allows a user to join a room (add themselves to members array).
      // Also allows existing members to make other updates if functionality is added later.
      allow update: if request.auth.uid in request.resource.data.members;
    }
  }
}
