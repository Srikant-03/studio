rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is a member of the room
    function isRoomMember(roomId, userId) {
      let room = get(/databases/$(database)/documents/rooms/$(roomId));
      return userId in room.data.members;
    }
    
    // Helper function to check if user is the owner of the room
    function isRoomOwner(roomId, userId) {
      let room = get(/databases/$(database)/documents/rooms/$(roomId));
      return room.data.creatorId == userId;
    }

    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /rooms/{roomId} {
      // Allow creation if authenticated
      allow create: if request.auth != null;
      // Allow get (single doc) if authenticated so users can join
      allow get: if request.auth != null;
      // Allow list (queries) only if user is a member
      allow list: if request.auth != null && (request.auth.uid in resource.data.members);
      // Allow update if user is a member (e.g., joining)
      allow update: if request.auth != null && (request.auth.uid in resource.data.members || request.auth.uid in request.resource.data.members);
      // Allow delete ONLY if user is the OWNER
      allow delete: if request.auth != null && resource.data.creatorId == request.auth.uid;

      match /annotations/{annotationId} {
        allow read: if request.auth != null && isRoomMember(roomId, request.auth.uid);
        allow create: if request.auth != null && isRoomMember(roomId, request.auth.uid);
        allow update: if request.auth != null && isRoomMember(roomId, request.auth.uid);
        // Delete: Owner of annotation OR Room Owner
        allow delete: if request.auth != null && (resource.data.userId == request.auth.uid || isRoomOwner(roomId, request.auth.uid));
      }

      match /highlights/{highlightId} {
         allow read: if request.auth != null && isRoomMember(roomId, request.auth.uid);
         allow create: if request.auth != null && isRoomMember(roomId, request.auth.uid);
         allow update: if request.auth != null && isRoomMember(roomId, request.auth.uid);
         allow delete: if request.auth != null && (resource.data.userId == request.auth.uid || isRoomOwner(roomId, request.auth.uid));
      }

      match /messages/{messageId} {
         allow read: if request.auth != null && isRoomMember(roomId, request.auth.uid);
         allow create: if request.auth != null && isRoomMember(roomId, request.auth.uid);
         // No update for messages usually
         allow delete: if request.auth != null && (resource.data.userId == request.auth.uid || isRoomOwner(roomId, request.auth.uid));
      }
      
      match /bookmarks/{bookmarkId} {
         allow read: if request.auth != null && isRoomMember(roomId, request.auth.uid);
         allow create: if request.auth != null && isRoomMember(roomId, request.auth.uid);
         allow delete: if request.auth != null && (resource.data.userId == request.auth.uid || isRoomOwner(roomId, request.auth.uid));
      }
    }
  }
}
